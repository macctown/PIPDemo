{{> flash}}
<div class="row col-md-2"></div>
<div class="row col-md-8">
<h3>Edit a New Lab</h3>
<form action="/lab/edit" method="post">
    <div class="form-group">
        <label for="formGroupExampleInput">Name</label>
        <input type="text" class="form-control" name="name" value="{{lab.name}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Home Page Url</label>
        <input type="text" class="form-control" name="homeUrl" value="{{lab.homeUrl}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Brief</label>
        <textarea class="form-control" rows="5" name="brief" >{{lab.brief}}</textarea>
    </div>
    <input type="hidden" name="id" value="{{lab._id}}">
    <input type="hidden" name="_csrf" value="{{_csrf}}">
    <div class="text-center">
        <button class="btn btn-md btn-info">Submit</button>
    </div>
</form>
</div>
<div class="row col-md-2"></div>