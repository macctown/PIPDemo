{{#if errors}}
<div class="alert alert-danger fade in">
    {{#each errors}}
        <div>{{this.msg}}</div>
    {{/each}}
</div>
{{/if}}

{{#if info}}
    <div class="alert alert-info fade in">
        {{#each info}}
            <div>{{this.msg}}</div>
        {{/each}}
    </div>
{{/if}}

{{#if success}}
    <div class="alert alert-success fade in">
        {{#each success}}
            <div>{{this.msg}}</div>
        {{/each}}
    </div>
{{/if}}