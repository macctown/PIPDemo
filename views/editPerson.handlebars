{{> flash}}
<div class="row col-md-2"></div>
<div class="row col-md-8">
<h3>Edit a New Person</h3>

    <div class="form-group">
        <label for="formGroupExampleInput">Name</label>
        <input type="text" class="form-control" name="name" value="{{person.name}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Home Page Url</label>
        <input type="text" class="form-control" name="homeUrl" value="{{person.homeUrl}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Linkedin Url</label>
        <input type="text" class="form-control" name="linkedin" value="{{person.linkedin}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Phone</label>
        <input type="text" class="form-control" name="phone" value="{{person.phone}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Email</label>
        <input type="text" class="form-control" name="email" value="{{person.email}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Title</label>
        <input type="text" class="form-control" name="title" value="{{person.title}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Avatar</label>
        <img src="http:{{person.avatar}}">
        <input type="text" class="form-control" name="avatar" value="{{person.avatar}}">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Lab</label>
        {{#each person.researchAt}}
            <p>{{this.name}}</p>
        {{/each}}
    </div>
    <div class="form-group">
        <form action="/initial/publication/{{person._id}}" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf}}">
            <label for="formGroupExampleInput2">Publication</label><br>
            {{#each person.publication}}
                <b>Title</b>: <a href="{{this.link}}">{{this.title}}</a><br>
                <b>Journal</b>: {{this.journal}}<br>
                <b>Publisher</b>: {{this.publisher}}<br>
                <b>Abstract</b>: {{this.abstract}}<br>
                <b>Year</b>: {{this.year}}<br>
                <hr>
            {{/each}}
            <p>
                Profile: <input type="text" name="profile">
                <input type="submit" class="btn btn-md btn-primary" value="Crawl Papers">
            </p>
        </form>
    </div>
    <input type="hidden" name="id" value="{{person._id}}">
    <input type="hidden" name="_csrf" value="{{_csrf}}">
    <div class="text-center">
        <button class="btn btn-md btn-info">Submit</button>
    </div>
</div>
<div class="row col-md-2"></div>